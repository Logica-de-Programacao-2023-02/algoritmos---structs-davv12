package main

import (
	"fmt"
	"time"
)

type Funcionario struct {
	Nome    string
	Salario float64
	Idade   int
}

func aumentarSalario(funcionario *Funcionario, percentual float64) {
	aumento := funcionario.Salario * percentual / 100
	funcionario.Salario += aumento
}

func diminuirSalario(funcionario *Funcionario, percentual float64) {
	desconto := funcionario.Salario * percentual / 100
	funcionario.Salario -= desconto
}

func calcularTempoServico(funcionario Funcionario) time.Duration {
	idadeInicioTrabalho := 18
	anosTrabalhados := funcionario.Idade - idadeInicioTrabalho
	return time.Duration(anosTrabalhados) * 365 * 24 * time.Hour
}

func main() {
	funcionarioExemplo := Funcionario{
		Nome:    "João",
		Salario: 5000.0,
		Idade:   30,
	}

	fmt.Printf("Salário antes do aumento: %.2f\n", funcionarioExemplo.Salario)
	aumentarSalario(&funcionarioExemplo, 10.0)
	fmt.Printf("Salário após aumento: %.2f\n", funcionarioExemplo.Salario)

	fmt.Printf("Salário antes do desconto: %.2f\n", funcionarioExemplo.Salario)
	diminuirSalario(&funcionarioExemplo, 5.0)
	fmt.Printf("Salário após desconto: %.2f\n", funcionarioExemplo.Salario)

	tempoServico := calcularTempoServico(funcionarioExemplo)
	fmt.Printf("Tempo de serviço de %s: %s\n", funcionarioExemplo.Nome, tempoServico)
}
